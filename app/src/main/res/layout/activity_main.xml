<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">

        <EditText
            android:id="@+id/vvod1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="5pt"

            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/znak"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="156dp"


            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/vvod2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="22pt"
            android:layout_toRightOf="@id/vvod1"

            android:inputType="numberDecimal" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="3pt"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt">

        <Button
            android:id="@+id/but1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/_1"
            android:textSize="8pt" />

        <Button
            android:id="@+id/but2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but1"
            android:text="2"
            android:textSize="8pt" />

        <Button
            android:id="@+id/but3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but2"
            android:text="3"
            android:textSize="8pt" />


        <Button
            android:id="@+id/but4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/but1"
            android:textSize="8pt"
            android:text="4" />

        <Button
            android:id="@+id/but5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but4"
            android:layout_below="@id/but2"
            android:textSize="8pt"
            android:text="5" />

        <Button
            android:id="@+id/but6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but5"
            android:layout_below="@id/but3"
            android:textSize="8pt"
            android:text="6" />
        <Button
            android:id="@+id/but7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/but4"
            android:textSize="8pt"
            android:text="7" />
        <Button
            android:id="@+id/but8"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but7"
            android:layout_below="@id/but5"
            android:textSize="8pt"
            android:text="8" />
        <Button
            android:id="@+id/but9"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but8"
            android:layout_below="@id/but6"
            android:textSize="8pt"
            android:text="9" />
        <Button
            android:id="@+id/but0"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but7"
            android:layout_below="@id/but8"
            android:textSize="8pt"
            android:text="0" />

        <Button
            android:id="@+id/butplus"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but3"
            android:text="+"
            android:textSize="8pt" />
        <Button
            android:id="@+id/butminus"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but3"
            android:layout_below="@id/butplus"
            android:textSize="8pt"
            android:text="-" />
        <Button
            android:id="@+id/butumn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but9"
            android:layout_below="@id/butminus"
            android:textSize="8pt"
            android:text="*" />
        <Button
            android:id="@+id/butdel"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but9"
            android:layout_below="@id/butumn"
            android:textSize="8pt"
            android:text="/" />
        <Button
            android:id="@+id/butravno"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/but0"
            android:layout_below="@id/but9"
            android:textSize="8pt"
            android:text="=" />
        <Button
            android:id="@+id/butreset"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/but0"
            android:layout_below="@id/but7"
            android:textSize="8pt"
            android:text="C" />

    </RelativeLayout>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:textSize="12pt"
        android:layout_marginTop="3pt"
        android:id="@+id/vivod"
        android:gravity="center_horizontal">
    </TextView>
</LinearLayout>